<Configuration name="Default"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://df9ry.ampr.org/ax25c ax25c.xsd" 
	xmlns="http://df9ry.ampr.org/ax25c">
	
	<Settings>
		<!-- Timer tick in ms -->
		<Setting name="tick">20</Setting>
		<!-- Log level -->
		<Setting name="loglevel">DEBUG</Setting>
	</Settings>
	
	<Plugins>
		<Plugin name="Terminal" file="ax25c_terminal.so">
			<Instances>
				<Instance name="T2001">
					<Settings>
						<Setting name="line_length">256</Setting>
						<Setting name="port">2001</Setting>
					</Settings>
				</Instance>
				<Instance name="T2000">
					<Settings>
						<Setting name="line_length">256</Setting>
						<Setting name="port">2000</Setting>
					</Settings>
				</Instance>
			</Instances>
		</Plugin>
	</Plugins>
	
</Configuration>